extends layout-without-footer

block content
   div#login-container
      div.inner-bg
         div.container
            div.row
               div.col-sm-8.col-sm-offset-2.login-head-font
                  h1
                     strong Pure
                     |  Navigation
                  div.login-head-desc
                     p No ads, no advertising, no waste, no nonsense, only navigation for you !
            div.row#signinBox
               div.col-sm-6.col-sm-offset-3.login-box
                  div.login-box-top
                     div.login-box-top-left
                        h3 Login to your Navi
                        p Enter your username to log in.
                     div.login-box-top-right
                        i.fa.fa-user-plus.btnhover.trans#signupBtn
                  div.login-box-bottom
                     form.login-form(role="form")
                        div.form-group
                           label.sr-only(for="form-username") Username:
                           input#login-username.form-control.input-lg(type="text" name="form-username" placeholder="Login only need username...")
                        input#loginBtn.btn.btn-primary.btn-lg.btn-block(type="button" value="Login")
            div.row#signupBox(style="display:none")
               div.col-sm-6.col-sm-offset-3.login-box
                  div.login-box-top
                     div.login-box-top-left
                        h3 Welcome you to register
                        p Enter your username and email address to sign up.
                     div.login-box-top-right
                        i.fa.fa-sign-in.btnhover.trans#signinBtn
                  div.login-box-bottom
                     form.login-form(role="form")
                        div.form-group
                           label.sr-only(for="form-username") Username:
                           input#signup-username.form-control.input-lg(type="text" name="form-username" placeholder="Login only need username...")
                        div.form-group
                           label(for="form-username") Email:
                           input#signup-email.form-control.input-lg(type="text" name="form-username" placeholder="Email address,Optianal")
                        input#signBtn.btn.btn-primary.btn-lg.btn-block(type="button" value="Sign Up")
            div.row
               div.col-sm-6.col-sm-offset-3.social-login
                  h3 ... or login withï¼š
                  div.social-login-buttons
                     a.btn.btn-link
                        i.fa.fa-facebook
                        |  Facebook
                     a.btn.btn-link
                        i.fa.fa-qq
                        |  QQ
                     a.btn.btn-link
                        i.fa.fa-weibo
                        |  Sina Weibo
   script(src="../javascripts/login.js")