extends layout

block content
  div#wrapper
    .background-container.background-img
    div#header
      div#header-menu
        div#header-weather
          div#weather-city
          div#weather-icon
          div#weather-temp
        //div#change-bg.trans
        //  span.change-bg-font.trans.glyphicon.glyphicon-refresh(aria-hidden="true")
      div#header-user
        div#user.header-user.trans= username
        div#logout.header-user.trans 登出
        div#about.header-user.trans 关于
  div.index-container
    div#search
      div.search-center
        form.form-inline.search-form
          div.form-group
            input.form-control.search-font#search-box(type="text" placeholder="Search")
          div.form-group
            select.form-control.search-select.search-font
              option 谷歌
              option 百度
              option 必应
          button#searchBtn.btn.btn-primary.search-btn-font(type="submit") 搜索
    div#website
      each item in links
        div.webItem
          a.webDesc.trans(href="http://"+item.url target="_blank")= item.name
          div.webLink= item.url
      each item in links
        div.webItem
          a.webDesc.trans(href="http://" + item.url target="_blank")= item.name
          div.webLink= item.url
      each item in links
        div.webItem
          a.webDesc.trans(href="http://" + item.url target="_blank")= item.name
          div.webLink= item.url
      div.webItem#newUrl
        div.webDesc.trans +
        //div.webLink www.zhihu.com
    div#aboutContent
      div.aboutTop
      div.myIcon
        a.iconPic(href="http://horacework.com")
          img(src="https://avatars3.githubusercontent.com/u/7687350?v=3&s=460")
      div.aboutBottom
        div.bottomMyName
          a(href="http://horacework.com") Horace Chan
        div.bottomDetail 这是个很无聊的导航项目，强迫症病发的结果
        div.bottomSocial
          a.github(target="_blank" href="https://github.com/horacework")
          a.google(target="_blank" href="https://plus.google.com/u/0/108432907884807207484")
          a.zhihu(target="_blank" href="https://www.zhihu.com/people/chen-hou-ren")
  div#newContent
    form.form-inline
      div.form-group
        label(for="newUrlName") 显示名称：
        input#newUrlName.form-control(type="text" placeholder="草榴网、网易云音乐")
      div.form-group
        label(for="newUrlLine") 域名地址：
        div.input-group
          div.input-group-addon http://
          input#newUrlLine.form-control(type="text" placeholder="www.google.com")
      input#newContentBtn.btn.btn-primary(type="button" value="添加")
      input#newContentCancel.btn.btn-danger(type="button" value="取消")